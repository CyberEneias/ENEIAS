-- Serviços
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Proteção básica
if not player then
	warn("Jogador não encontrado.")
	return
end

-- Remove GUI antiga se existir
pcall(function()
	player.PlayerGui:FindFirstChild("InfoExperienciaGui"):Destroy()
end)

-- Criando GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "InfoExperienciaGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local textLabel = Instance.new("TextLabel")
textLabel.Parent = screenGui
textLabel.Size = UDim2.new(0, 520, 0, 130)
textLabel.Position = UDim2.new(0, 20, 0, 20)
textLabel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
textLabel.BackgroundTransparency = 0.15
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextWrapped = true
textLabel.TextScaled = true
textLabel.BorderSizePixel = 0

-- Informações
local nomeExperiencia = game.Name

-- Loop de atualização
task.spawn(function()
	while screenGui.Parent do
		local dataHora = os.date("%d/%m/%Y - %H:%M:%S")
		textLabel.Text =
			"Experiência em Teste:\n" ..
			nomeExperiencia ..
			"\n\nData e Hora:\n" ..
			dataHora

		task.wait(1)
	end
end)
