-- Execução momentânea (colar e rodar no console)

if game.CoreGui:FindFirstChild("TempTestGUI") then
	game.CoreGui.TempTestGUI:Destroy()
end

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- Infos da experiência
local experienceName = game.Name
local executionDate = os.date("%d/%m/%Y - %H:%M:%S")

-- Estados
local autofarmEnabled = false
local killAuraEnabled = false

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "TempTestGUI"
gui.ResetOnSpawn = false
gui.Parent = game.CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 210)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Parent = gui

local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 12)

-- Título
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -10, 0, 32)
title.Position = UDim2.new(0, 5, 0, 5)
title.BackgroundTransparency = 1
title.Text = experienceName
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = frame

-- Data
local dateLabel = Instance.new("TextLabel")
dateLabel.Size = UDim2.new(1, -10, 0, 22)
dateLabel.Position = UDim2.new(0, 5, 0, 40)
dateLabel.BackgroundTransparency = 1
dateLabel.Text = executionDate
dateLabel.Font = Enum.Font.Gotham
dateLabel.TextScaled = true
dateLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
dateLabel.Parent = frame

-- Função Toggle
local function createToggle(name, yPos, callback)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -20, 0, 38)
	btn.Position = UDim2.new(0, 10, 0, yPos)
	btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	btn.Text = name .. ": OFF"
	btn.Font = Enum.Font.Gotham
	btn.TextScaled = true
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Parent = frame

	local c = Instance.new("UICorner", btn)
	c.CornerRadius = UDim.new(0, 8)

	local enabled = false
	btn.MouseButton1Click:Connect(function()
		enabled = not enabled
		btn.Text = name .. (enabled and ": ON" or ": OFF")
		btn.BackgroundColor3 = enabled and Color3.fromRGB(70, 120, 70) or Color3.fromRGB(45, 45, 45)
		callback(enabled)
	end)
end

-- Toggles
createToggle("Autofarm", 75, function(state)
	autofarmEnabled = state
end)

createToggle("Kill Aura", 125, function(state)
	killAuraEnabled = state
end)

-- Autofarm loop (exemplo genérico)
task.spawn(function()
	while gui.Parent do
		task.wait(1)
		if autofarmEnabled then
			-- Ajuste conforme o jogo:
			-- mover personagem
			-- coletar itens
			-- disparar remotes
			print("[Autofarm] ativo")
		end
	end
end)

-- Kill Aura loop (exemplo genérico)
task.spawn(function()
	while gui.Parent do
		task.wait(0.25)
		if killAuraEnabled then
			-- Ajuste conforme o jogo:
			-- detectar NPCs próximos
			-- atacar automaticamente
			print("[Kill Aura] ativa")
		end
	end
end)

print("GUI temporário carregado com sucesso.")
