-- ===== AUTOFARM COSTAS FIXO (COMPASSO) COM ANTI-KNOCKBACK, INFINITE JUMP E MOVESPEED =====
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

if not player then return end

-- Remove GUI antiga
pcall(function()
	CoreGui:FindFirstChild("InfoExperienciaGui"):Destroy()
end)

-- GUI principal
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "InfoExperienciaGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = CoreGui

-- Frame
local frame = Instance.new("Frame")
frame.Parent = screenGui
frame.Size = UDim2.new(0, 520, 0, 220) -- Aumentei a altura para caber o movespeed
frame.Position = UDim2.new(0, 40, 0, 40)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = frame

-- Texto principal
local textLabel = Instance.new("TextLabel")
textLabel.Parent = frame
textLabel.Size = UDim2.new(1, -20, 1, -140)
textLabel.Position = UDim2.new(0, 10, 0, 10)
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextWrapped = true
textLabel.TextScaled = true
textLabel.TextXAlignment = Enum.TextXAlignment.Left
textLabel.TextYAlignment = Enum.TextYAlignment.Top

local nomeExperiencia = game.Name

-- Atualização de data/hora
task.spawn(function()
	while frame.Parent do
		local dataHora = os.date("%d/%m/%Y - %H:%M:%S")
		textLabel.Text =
			"Experiência em Teste:\n" ..
			nomeExperiencia ..
			"\n\nData e Hora:\n" .. dataHora
		task.wait(1)
	end
end)

-- Status do NPC
local statusLabel = Instance.new("TextLabel")
statusLabel.Parent = frame
statusLabel.Size = UDim2.new(1, -20, 0, 20)
statusLabel.Position = UDim2.new(0, 10, 1, -120)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
statusLabel.Font = Enum.Font.SourceSans
statusLabel.TextSize = 14
statusLabel.TextXAlignment = Enum.TextXAlignment.Left
statusLabel.Text = "NPC: Nenhum"

-- Status do Movespeed
local movespeedLabel = Instance.new("TextLabel")
movespeedLabel.Parent = frame
movespeedLabel.Size = UDim2.new(1, -20, 0, 20)
movespeedLabel.Position = UDim2.new(0, 10, 1, -100)
movespeedLabel.BackgroundTransparency = 1
movespeedLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
movespeedLabel.Font = Enum.Font.SourceSans
movespeedLabel.TextSize = 14
movespeedLabel.TextXAlignment = Enum.TextXAlignment.Left
movespeedLabel.Text = "Movespeed: 16"

-- Botão de fechar
local closeButton = Instance.new("TextButton")
closeButton.Parent = frame
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.Text = "X"
closeButton.TextSize = 18

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(0, 8)
closeCorner.Parent = closeButton

closeButton.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

-- DRAG
local dragging = false
local dragStart
local startPos

local function update(input)
	local delta = input.Position - dragStart
	frame.Position = UDim2.new(
		startPos.X.Scale,
		startPos.X.Offset + delta.X,
		startPos.Y.Scale,
		startPos.Y.Offset + delta.Y
	)
end

frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1
	or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement
	or input.UserInputType == Enum.UserInputType.Touch) then
		update(input)
	end
end)

-- ===== MOVESPEED CONTROL =====
local movespeedEnabled = false
local targetMovespeed = 16
local defaultMovespeed = 16
local movespeedConnection = nil

-- Frame do Movespeed
local movespeedFrame = Instance.new("Frame")
movespeedFrame.Parent = frame
movespeedFrame.Size = UDim2.new(0, 160, 0, 80)
movespeedFrame.Position = UDim2.new(0, 180, 1, -90)
movespeedFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
movespeedFrame.BorderSizePixel = 0

local movespeedCorner = Instance.new("UICorner")
movespeedCorner.CornerRadius = UDim.new(0, 8)
movespeedCorner.Parent = movespeedFrame

-- Slider do Movespeed
local movespeedSlider = Instance.new("Frame")
movespeedSlider.Parent = movespeedFrame
movespeedSlider.Size = UDim2.new(0, 140, 0, 6)
movespeedSlider.Position = UDim2.new(0, 10, 0, 40)
movespeedSlider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
movespeedSlider.BorderSizePixel = 0

local sliderCorner = Instance.new("UICorner")
sliderCorner.CornerRadius = UDim.new(0, 3)
sliderCorner.Parent = movespeedSlider

local sliderFill = Instance.new("Frame")
sliderFill.Parent = movespeedSlider
sliderFill.Size = UDim2.new((targetMovespeed - 0) / (160 - 0), 0, 1, 0)
sliderFill.Position = UDim2.new(0, 0, 0, 0)
sliderFill.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
sliderFill.BorderSizePixel = 0

local fillCorner = Instance.new("UICorner")
fillCorner.CornerRadius = UDim.new(0, 3)
fillCorner.Parent = sliderFill

local sliderButton = Instance.new("TextButton")
sliderButton.Parent = movespeedSlider
sliderButton.Size = UDim2.new(0, 16, 0, 16)
sliderButton.Position = UDim2.new((targetMovespeed - 0) / (160 - 0), -8, 0.5, -8)
sliderButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
sliderButton.Text = ""
sliderButton.AutoButtonColor = false

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(1, 0)
buttonCorner.Parent = sliderButton

-- Valor do Movespeed
local movespeedValue = Instance.new("TextBox")
movespeedValue.Parent = movespeedFrame
movespeedValue.Size = UDim2.new(0, 60, 0, 25)
movespeedValue.Position = UDim2.new(0.5, -30, 0, 5)
movespeedValue.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
movespeedValue.TextColor3 = Color3.fromRGB(255, 255, 255)
movespeedValue.Font = Enum.Font.SourceSansBold
movespeedValue.TextSize = 16
movespeedValue.Text = tostring(targetMovespeed)
movespeedValue.TextScaled = true

local valueCorner = Instance.new("UICorner")
valueCorner.CornerRadius = UDim.new(0, 4)
valueCorner.Parent = movespeedValue

-- Botão toggle movespeed
local toggleMovespeedButton = Instance.new("TextButton")
toggleMovespeedButton.Parent = movespeedFrame
toggleMovespeedButton.Size = UDim2.new(0, 140, 0, 25)
toggleMovespeedButton.Position = UDim2.new(0, 10, 0, 55)
toggleMovespeedButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
toggleMovespeedButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleMovespeedButton.Font = Enum.Font.SourceSansBold
toggleMovespeedButton.TextSize = 14
toggleMovespeedButton.Text = "Movespeed: OFF"

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0, 4)
toggleCorner.Parent = toggleMovespeedButton

-- Atualiza o WalkSpeed do personagem
local function updateWalkSpeed()
	local character = player.Character
	if character and character:FindFirstChild("Humanoid") then
		if movespeedEnabled then
			character.Humanoid.WalkSpeed = targetMovespeed
		else
			character.Humanoid.WalkSpeed = defaultMovespeed
		end
	end
end

-- Loop para manter o WalkSpeed
local function movespeedLoop()
	if not movespeedEnabled then return end
	updateWalkSpeed()
end

-- Conectar ao Heartbeat para aplicar continuamente
movespeedConnection = RunService.Heartbeat:Connect(movespeedLoop)

-- Atualiza slider e valor
local function updateMovespeedDisplay(value)
	targetMovespeed = math.clamp(value, 0, 160)
	sliderFill.Size = UDim2.new((targetMovespeed - 0) / (160 - 0), 0, 1, 0)
	sliderButton.Position = UDim2.new((targetMovespeed - 0) / (160 - 0), -8, 0.5, -8)
	movespeedValue.Text = tostring(math.floor(targetMovespeed))
	movespeedLabel.Text = "Movespeed: " .. math.floor(targetMovespeed)
	
	if movespeedEnabled then
		updateWalkSpeed()
	end
end

-- Interação com o slider
local sliding = false
sliderButton.MouseButton1Down:Connect(function()
	sliding = true
end)

UserInputService.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		sliding = false
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if sliding and input.UserInputType == Enum.UserInputType.MouseMovement then
		local mousePos = UserInputService:GetMouseLocation()
		local sliderAbsPos = movespeedSlider.AbsolutePosition
		local sliderAbsSize = movespeedSlider.AbsoluteSize
		
		local relativeX = (mousePos.X - sliderAbsPos.X) / sliderAbsSize.X
		relativeX = math.clamp(relativeX, 0, 1)
		
		local newValue = math.floor(relativeX * 160)
		updateMovespeedDisplay(newValue)
	end
end)

-- Clicar no slider para mover
movespeedSlider.MouseButton1Down:Connect(function()
	local mousePos = UserInputService:GetMouseLocation()
	local sliderAbsPos = movespeedSlider.AbsolutePosition
	local sliderAbsSize = movespeedSlider.AbsoluteSize
	
	local relativeX = (mousePos.X - sliderAbsPos.X) / sliderAbsSize.X
	relativeX = math.clamp(relativeX, 0, 1)
	
	local newValue = math.floor(relativeX * 160)
	updateMovespeedDisplay(newValue)
	sliding = true
end)

-- Input manual no TextBox
movespeedValue.FocusLost:Connect(function(enterPressed)
	local value = tonumber(movespeedValue.Text)
	if value then
		updateMovespeedDisplay(value)
	else
		movespeedValue.Text = tostring(targetMovespeed)
	end
end)

-- Toggle movespeed
toggleMovespeedButton.MouseButton1Click:Connect(function()
	movespeedEnabled = not movespeedEnabled
	
	if movespeedEnabled then
		toggleMovespeedButton.Text = "Movespeed: ON"
		toggleMovespeedButton.BackgroundColor3 = Color3.fromRGB(0, 140, 0)
		updateWalkSpeed()
	else
		toggleMovespeedButton.Text = "Movespeed: OFF"
		toggleMovespeedButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		
		-- Restaurar velocidade padrão
		local character = player.Character
		if character and character:FindFirstChild("Humanoid") then
			character.Humanoid.WalkSpeed = defaultMovespeed
		end
	end
end)

-- ===== AUTOFARM CONFIG =====
local autofarmEnabled = false
local lockedNPC = nil
local connection = nil

-- CONFIGURAÇÕES
local BACK_DISTANCE = 3.5
local HEIGHT_OFFSET = 2.5
local MAX_DISTANCE = 60

-- Botão toggle autofarm
local toggleButton = Instance.new("TextButton")
toggleButton.Parent = frame
toggleButton.Size = UDim2.new(0, 160, 0, 40)
toggleButton.Position = UDim2.new(1, -170, 1, -50)
toggleButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 18
toggleButton.Text = "Autofarm: OFF"

local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = UDim.new(0, 8)
btnCorner.Parent = toggleButton

-- Função para encontrar NPC mais próximo
local function findClosestNPC()
	local character = player.Character
	if not character or not character:FindFirstChild("HumanoidRootPart") then
		return nil
	end

	local root = character.HumanoidRootPart
	local closest, minDist = nil, MAX_DISTANCE

	for _, model in ipairs(workspace:GetDescendants()) do
		if model:IsA("Model")
			and model ~= character
			and not Players:GetPlayerFromCharacter(model) -- Ignora jogadores
			and model:FindFirstChild("Humanoid")
			and model:FindFirstChild("HumanoidRootPart")
			and model.Humanoid.Health > 0 then

			local dist = (root.Position - model.HumanoidRootPart.Position).Magnitude
			if dist < minDist then
				minDist = dist
				closest = model
			end
		end
	end

	return closest
end

-- Função de autofarm
local function autofarmLoop()
	if not autofarmEnabled then return end
	
	pcall(function()
		local character = player.Character
		local root = character and character:FindFirstChild("HumanoidRootPart")

		if root then
			-- valida NPC travado
			if not lockedNPC
				or not lockedNPC.Parent
				or not lockedNPC:FindFirstChild("Humanoid")
				or lockedNPC.Humanoid.Health <= 0 then

				lockedNPC = findClosestNPC()
			end

			if lockedNPC and lockedNPC:FindFirstChild("HumanoidRootPart") then
				local npcRoot = lockedNPC.HumanoidRootPart

				-- === POSIÇÃO ESTÁTICA ATRÁS DO NPC ===
				local npcLook = npcRoot.CFrame.LookVector
				local targetPos = npcRoot.Position
					+ (-npcLook * BACK_DISTANCE)
					+ Vector3.new(0, HEIGHT_OFFSET, 0)

				-- ANTI KNOCKBACK
				root.AssemblyLinearVelocity = Vector3.zero
				root.AssemblyAngularVelocity = Vector3.zero

				-- POSICIONA ESTÁTICO
				root.CFrame = CFrame.new(targetPos)
				
				-- Atualiza status
				statusLabel.Text = "NPC: " .. lockedNPC.Name
			else
				statusLabel.Text = "NPC: Nenhum"
			end
		end
	end)
end

-- Toggle autofarm
toggleButton.MouseButton1Click:Connect(function()
	autofarmEnabled = not autofarmEnabled
	
	if autofarmEnabled then
		if connection then connection:Disconnect() end
		connection = RunService.Heartbeat:Connect(autofarmLoop)
		toggleButton.Text = "Autofarm: ON"
		toggleButton.BackgroundColor3 = Color3.fromRGB(0, 140, 0)
	else
		if connection then 
			connection:Disconnect()
			connection = nil
		end
		lockedNPC = nil
		toggleButton.Text = "Autofarm: OFF"
		toggleButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		statusLabel.Text = "NPC: Nenhum"
	end
end)

-- ===== INFINITE JUMP CONFIG =====
local infiniteJumpEnabled = false

-- Botão toggle infinite jump
local infiniteJumpButton = Instance.new("TextButton")
infiniteJumpButton.Parent = frame
infiniteJumpButton.Size = UDim2.new(0, 160, 0, 40)
infiniteJumpButton.Position = UDim2.new(0, 10, 1, -50)
infiniteJumpButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
infiniteJumpButton.TextColor3 = Color3.fromRGB(255, 255, 255)
infiniteJumpButton.Font = Enum.Font.SourceSansBold
infiniteJumpButton.TextSize = 18
infiniteJumpButton.Text = "Infinite Jump: OFF"

local jumpBtnCorner = Instance.new("UICorner")
jumpBtnCorner.CornerRadius = UDim.new(0, 8)
jumpBtnCorner.Parent = infiniteJumpButton

infiniteJumpButton.MouseButton1Click:Connect(function()
	infiniteJumpEnabled = not infiniteJumpEnabled
	if infiniteJumpEnabled then
		infiniteJumpButton.Text = "Infinite Jump: ON"
		infiniteJumpButton.BackgroundColor3 = Color3.fromRGB(0, 140, 0)
	else
		infiniteJumpButton.Text = "Infinite Jump: OFF"
		infiniteJumpButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	end
end)

-- Listener do salto
UserInputService.JumpRequest:Connect(function()
	if infiniteJumpEnabled then
		local character = player.Character
		if character and character:FindFirstChild("Humanoid") then
			character.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
		end
	end
end)

-- Limpeza quando a GUI for fechada
screenGui.Destroying:Connect(function()
	if connection then
		connection:Disconnect()
	end
	if movespeedConnection then
		movespeedConnection:Disconnect()
	end
end)
